@model List<Blog.ViewModels.PostVM>

@{
    ViewData["Title"] = "List of Posts";
}

<div class="container-fluid">
    <a class="btn btn-primary mb-1" asp-action="Create" asp-controller="Post" asp-area="Admin">Add Post</a>
    <div class="card">
        <div class="card-header bg-primary ">
            <h4 class="card-title text-white">List of Posts</h4>
        </div>
        <div class="card-body" style="background-color:lightgray;">
            @foreach (var post in Model)
            {
                <div class="rounded mb-4 bg-white p-1 ">
                    <div class="row">
                        <div class="col-2 d-flex iustify-content-center flex-column ">
                          @if (post.ThumnailUrl == null)
                            {
                                <img class="img-fluid" src="~/Thumbnails/defaultthumbnail.jpg" style="object-fit:fill; height:100px;" />

                            }
                            else
                            {
                                <img class="img-fluid" src="~/Thumbnails/@post.ThumnailUrl" style="object-fit:fill; height:100px;" />

                            }
                        </div>
                        <div class="col-5 d-flex iustify-content-center flex-column ">
                            <h4 style="font-size:1rem;" class="text-primary fw-bold" >@post.Title</h4>
                            <p>@post.CreatedDate</p>
                        </div>
                        <div class="col-5 text-right d-flex iustify-content-center flex-column">
                            <h4 style="font-size:1rem;" class="text-primary fw-bold" >@post.AuthorName</h4>
                            <p>
                                <a class="btn btn-warning" asp-action="Edit" asp-controller="Post" asp-area="Admin" >Edit</a>
                                <form asp-action="Delete" asp-controller="Post" asp-area="Admin" asp-route-id="@post.Id" method="post" onsubmit="return confirm('Do you want to delete this post?')" >
                                    <button type="submit" class="btn btn-danger">Delete</button>

                                </form>
                            </p>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>
</div>