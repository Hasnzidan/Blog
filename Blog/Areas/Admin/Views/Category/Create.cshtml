@model Blog.Models.Category
@using Microsoft.Extensions.Localization
@using Blog.Resources
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = @Localizer["CreateCategory"];
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-primary">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="card-title text-white mb-0">@Localizer["CreateCategory"]</h3>
                <a asp-action="Index" class="btn btn-light">
                    <i class="fas fa-arrow-left"></i> @Localizer["BackToList"]
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NameAr" class="control-label">@Localizer["ArabicName"]</label>
                            <input asp-for="NameAr" class="form-control" dir="rtl" />
                            <span asp-validation-for="NameAr" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="DescriptionAr" class="control-label">@Localizer["ArabicDescription"]</label>
                            <textarea asp-for="DescriptionAr" class="form-control" rows="3" dir="rtl"></textarea>
                            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NameEn" class="control-label">@Localizer["EnglishName"]</label>
                            <input asp-for="NameEn" class="form-control" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="DescriptionEn" class="control-label">@Localizer["EnglishDescription"]</label>
                            <textarea asp-for="DescriptionEn" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> @Localizer["Create"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
