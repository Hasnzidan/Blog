@using Microsoft.Extensions.Localization
@using Blog.Resources
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = @Localizer["Contact"];
}

@section Styles {
    <style>
        .contact-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #363636 100%);
            color: white;
            padding: 80px 0;
            margin-bottom: 60px;
            text-align: center;
            position: relative;
        }

        .contact-header::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('/images/pattern.png');
            opacity: 0.1;
            pointer-events: none;
        }

        .contact-form {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 40px;
        }

        .contact-info {
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .contact-icon {
            width: 60px;
            height: 60px;
            background: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            color: #007bff;
            font-size: 1.5rem;
            transition: all 0.3s ease;
        }

        .contact-info-item:hover .contact-icon {
            background: #007bff;
            color: white;
            transform: translateY(-5px);
        }

        .contact-info-item {
            margin-bottom: 30px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
        }

        .btn-submit {
            padding: 12px 30px;
            border-radius: 8px;
            background: #007bff;
            color: white;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

        .map-container {
            height: 300px;
            border-radius: 15px;
            overflow: hidden;
            margin-top: 40px;
        }

        [dir="rtl"] .contact-form,
        [dir="rtl"] .contact-info {
            text-align: right;
        }

        [dir="ltr"] .contact-form,
        [dir="ltr"] .contact-info {
            text-align: left;
        }
    </style>
}

<div class="contact-header">
    <div class="container">
        <h1 class="display-4">@Localizer["ContactUs"]</h1>
        <p class="lead">@Localizer["ContactUsSubtitle"]</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="contact-form">
                <h2 class="mb-4">@Localizer["SendMessage"]</h2>
                <form>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="@Localizer["YourName"]">
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control" placeholder="@Localizer["YourEmail"]">
                        </div>
                    </div>
                    <input type="text" class="form-control" placeholder="@Localizer["Subject"]">
                    <textarea class="form-control" rows="5" placeholder="@Localizer["Message"]"></textarea>
                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-paper-plane me-2"></i>@Localizer["SendMessage"]
                    </button>
                </form>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="contact-info">
                <h2 class="mb-4">@Localizer["GetInTouch"]</h2>
                <div class="contact-info-item">
                    <div class="contact-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h4>@Localizer["Address"]</h4>
                    <p>@Localizer["AddressText"]</p>
                </div>
                <div class="contact-info-item">
                    <div class="contact-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <h4>@Localizer["Phone"]</h4>
                    <p>@Localizer["PhoneText"]</p>
                </div>
                <div class="contact-info-item">
                    <div class="contact-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <h4>@Localizer["Email"]</h4>
                    <p>@Localizer["EmailText"]</p>
                </div>
            </div>
        </div>
    </div>

    <div class="map-container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387193.305935303!2d-74.25986548248684!3d40.69714941932609!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2s!4v1644489278727!5m2!1sen!2s"
                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
</div>
