@model Blog.Models.Page
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Model.Title;
    var isRtl = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.StartsWith("ar");
    string pageThumbnail = Model.ThumbnailUrl ?? "/blog/assets/img/page-bg.jpg";
}

<header class="masthead" style="background-image: url('@pageThumbnail')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="page-heading @(isRtl ? "text-right" : "")">
                    <h1>@Model.Title</h1>
                    @if (!string.IsNullOrEmpty(Model.ShortDescription))
                    {
                        <span class="subheading">@Model.ShortDescription</span>
                    }
                </div>
            </div>
        </div>
    </div>
</header>

<main class="mb-4">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7 @(isRtl ? "text-right" : "")">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</main>
