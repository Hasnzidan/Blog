@model Blog.Models.Page

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1>@Model.Title</h1>
            
            @if (!string.IsNullOrEmpty(Model.Thumbnail))
            {
                <img src="@Url.Content($"~/uploads/pages/{Model.Title}/{Model.Thumbnail}")" alt="@Model.Title" class="img-fluid mb-3" />
            }

            <div class="content">
                @Html.Raw(Model.Content)
            </div>

            <div class="mt-4">
                <small class="text-muted">Published on @Model.CreatedDate.ToString("MMMM dd, yyyy")</small>
            </div>
        </div>
    </div>
</div>
